<?xml version="1.0" encoding="utf-8"?>
<!--
   Full Backup Content Rules (Android < 12)
   Configures what data is included in Auto Backup for older devices.
   See https://developer.android.com/guide/topics/data/autobackup
-->
<full-backup-content>
   <!-- Explicitly include all storage domains for comprehensive backup -->
   <include domain="sharedpref" path="."/>
   <include domain="database" path="."/>
   <include domain="file" path="."/>

   <!-- Exclude device-specific configurations -->
   <exclude domain="sharedpref" path="device.xml"/>
</full-backup-content>