<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".ui.MainActivity">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/mainScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigation"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="50dp">

            <!-- HERO SECTION -->
            <ImageView
                android:id="@+id/imgHero"
                android:layout_width="match_parent"
                android:layout_height="550dp"
                android:scaleType="centerCrop"
                android:src="@android:color/darker_gray"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Gradient Overlay for Text Readability -->
            <View
                android:id="@+id/viewGradient"
                android:layout_width="match_parent"
                android:layout_height="550dp"
                android:background="@drawable/gradient_background"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- TOP BAR (Overlay) -->
            <ImageView
                android:id="@+id/txtLogo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="48dp"
                android:src="@mipmap/ic_launcher"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtVersion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="v1.0.0"
                android:textColor="#80FFFFFF"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="@id/txtLogo"
                app:layout_constraintTop_toBottomOf="@id/txtLogo" />
            
             <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SERIES"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginStart="24dp"
                app:layout_constraintStart_toEndOf="@id/txtLogo"
                app:layout_constraintTop_toTopOf="@id/txtLogo"
                app:layout_constraintBottom_toBottomOf="@id/txtLogo"/>
                
             <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MOVIES"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginStart="24dp"
                app:layout_constraintStart_toEndOf="@id/txtLogo"
                app:layout_constraintTop_toTopOf="@id/txtLogo"
                app:layout_constraintBottom_toBottomOf="@id/txtLogo"
                app:layout_constraintVertical_bias="0.5"
                android:translationX="70dp" />   

            <ImageView
                android:id="@+id/btnUpdateTop"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="56dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_update_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            
            <ImageView
                android:id="@+id/btnSearchTop"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="24dp"
                android:src="@drawable/ic_search_24"
                app:layout_constraintBottom_toBottomOf="@id/btnUpdateTop"
                app:layout_constraintEnd_toStartOf="@id/btnUpdateTop"
                app:layout_constraintTop_toTopOf="@id/btnUpdateTop" />


            <!-- HERO CONTENT -->
            <TextView
                android:id="@+id/txtHeroTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="32dp"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:text="@string/loading"
                android:textColor="#FFFFFF"
                android:textSize="32sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"
                app:layout_constraintBottom_toTopOf="@+id/layoutHeroButtons"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
                
            <!-- FAKE GENRES -->
             <TextView
                android:id="@+id/txtHeroGenre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sci-Fi • Drama • Action"
                android:textColor="#B3B3B3"
                android:textSize="12sp"
                android:layout_marginBottom="24dp"
                app:layout_constraintBottom_toTopOf="@id/txtHeroTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <LinearLayout
                android:id="@+id/layoutHeroButtons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginBottom="40dp"
                app:layout_constraintBottom_toBottomOf="@+id/imgHero">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="32dp">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_input_add"
                        app:tint="#FFFFFF"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="My List"
                        android:textColor="#FFFFFF"
                        android:textSize="10sp"/>
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPlayHero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#FFFFFF"
                    android:text="@string/play"
                    android:textColor="#000000"
                    app:cornerRadius="4dp"
                    app:icon="@android:drawable/ic_media_play"
                    app:iconTint="#000000" />

                 <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginStart="32dp">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_info_details"
                        app:tint="#FFFFFF"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Info"
                        android:textColor="#FFFFFF"
                        android:textSize="10sp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- 1. TRENDING LIST -->
            <TextView
                android:id="@+id/lblListHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:text="@string/trending_now"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgHero" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvTrending"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingStart="8dp"
                android:clipToPadding="false"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@+id/lblListHeader"
                tools:listitem="@layout/item_movie" />
                
            <!-- 2. LATEST SERIES -->
            <TextView
                android:id="@+id/lblSeries"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:text="Latest Series"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rvTrending" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvSeries"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingStart="8dp"
                android:clipToPadding="false"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@+id/lblSeries"
                tools:listitem="@layout/item_movie" />

            <!-- 3. LATEST MOVIES -->
            <TextView
                android:id="@+id/lblMovies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:text="Latest Movies"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rvSeries" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvMovies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingStart="8dp"
                android:clipToPadding="false"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@+id/lblMovies"
                tools:listitem="@layout/item_movie" />

            <!-- 4. MOST VIEWED -->
            <TextView
                android:id="@+id/lblMostViewed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:text="Most Viewed"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rvMovies" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvMostViewed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingStart="8dp"
                android:clipToPadding="false"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@+id/lblMostViewed"
                tools:listitem="@layout/item_movie" />

            <!-- 5. TOP 10 MALAYSIA -->
            <TextView
                android:id="@+id/lblMalaysia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:text="Top 10 in Malaysia"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rvMostViewed" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvMalaysia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingStart="8dp"
                android:clipToPadding="false"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@+id/lblMalaysia"
                tools:listitem="@layout/item_movie" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/groupHero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="imgHero,viewGradient,txtHeroTitle,txtHeroGenre,layoutHeroButtons" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    
    <!-- Search View Container (Hidden by default, overlays everything except nav) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerSearch"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#000000"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
        app:layout_constraintTop_toTopOf="parent">
        
        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#333333"
            app:iconifiedByDefault="false"
            app:queryHint="Search titles, people, genres"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:layout_constraintTop_toTopOf="parent"/>
            
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSearchResults"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="4dp"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="3"
            app:layout_constraintTop_toBottomOf="@id/searchView"
            app:layout_constraintBottom_toBottomOf="parent"/>
            
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#121212"
        app:itemIconTint="@android:color/white"
        app:itemTextColor="@android:color/white"
        app:menu="@menu/bottom_nav_menu"
        app:layout_constraintBottom_toBottomOf="parent" />
        
    <ProgressBar
        android:id="@+id/loadingIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>